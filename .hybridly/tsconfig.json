{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "hybridly/client",
      "unplugin-icons/types/vue"
    ],
    "baseUrl": "..",
    "paths": {
      "#/*": [
        ".hybridly/*"
      ],
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./resources/*"
      ]
    }
  },
  "include": [
    "../resources/views/index.vue",
    "../resources/**/*",
    "../app/**/*",
    "../src/**/*",
    "./php-types.d.ts",
    "./global-properties.d.ts",
    "./vue-extension.d.ts",
    "./routes.d.ts",
    "./components.d.ts",
    "./auto-imports.d.ts"
  ],
  "exclude": [
    "../public/**/*"
  ]
}